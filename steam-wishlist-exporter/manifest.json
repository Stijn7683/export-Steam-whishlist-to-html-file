{
  "manifest_version": 3,
  "name": "Steam Wishlist Exporter",
  "version": "2.0",
  "description": "Export the Steam wishlist HTML as a standalone file.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab", "scripting", "downloads"],
  "action": {
    "default_title": "Export Wishlist",
    "default_popup": "popup.html"
  }
}